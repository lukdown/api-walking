<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="yys">
	<!-- 전체리스트 -->
	<select id="courseList" parameterType="String"
		resultType="YysVo">
      <![CDATA[ 
        select *
		from course_list cl
      ]]>
		<choose>
			<when test="category == total">
				<![CDATA[
					left join users_list ul on cl.users_no = ul.users_no
				]]>
			</when>
			<when test="category == mycourse">
				<![CDATA[
					left join users_list ul on cl.users_no = ul.users_no
					where cl.users_no = 1
				]]>
			</when>
			<when test="category == bookmarks">
				<![CDATA[
					left join users_list ul on cl.users_no = ul.users_no
					where cl.users_no = 1
				]]>
			</when>

			<otherwise></otherwise>
		</choose>
	</select>





</mapper>