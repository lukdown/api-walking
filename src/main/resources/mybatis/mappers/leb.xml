<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="leb">
   <!-- course_list 등록 -->
   <insert id="courseDraw" parameterType="LebVo">
      <![CDATA[   
          insert into course_list
              values ( 
			              null, 
			              #{users_no}, 
			              #{course_name}, 
			              #{course_difficulty},
			              #{course_length},
			              #{course_time},
			              0,
			              #{course_region},     
			              now(),
			              #{course_open},
			              #{course_introduce}  
	         )
       ]]>
       <selectKey keyProperty="course_no" resultType="int" order="AFTER">
         <![CDATA[
            select last_insert_id()
         ]]>
      	</selectKey>
   </insert>
    <!-- course_point 등록 -->
   <insert id="coursePointDraw" parameterType="LebVo">
      <![CDATA[   
          insert into course_point
              values ( 
              			  null,
			              #{course_no}, 
			              #{course_latitude},
			              #{course_longitude},
			              #{course_order},
			              null
	         )
       ]]>
   </insert>
</mapper>